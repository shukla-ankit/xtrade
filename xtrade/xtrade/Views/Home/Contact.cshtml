@model MVCEmail.Models.EmailFormModel
@{
    ViewBag.Title = "Contact Us!";
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

<address>
    2925 Campus Green Dr,<br />
    Cincinnati, OH 45221<br />
    <abbr title="Phone">P:</abbr>
    513-000-0000
</address>

<address>
    <strong>Support:</strong>   <a href="mailto:xtradeshop@gmail.com">xtradeshop@gmail.com</a><br />
    <strong>Marketing:</strong> <a href="mailto:Marketing@xtrade.com">Marketing@xtrade.com</a>
</address>




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <h3>Have a Question or a Problem? Send your queries/complaints here.</h3>
    <hr />
    <div class="form-group">
        @Html.LabelFor(m => m.FromName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.FromName, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.FromName)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.FromEmail, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.FromEmail, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.FromEmail)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Message, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextAreaFor(m => m.Message, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Message)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Send" />
        </div>
    </div>
}

@section scripts {
@Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/moment.js"></script>
    <script src="~/Scripts/jquery.signalR-2.0.3.min.js"></script>
    <script src="~/signalr/hubs"></script>
    <script src="~/Scripts/knockout-3.1.0.js"></script>
    <script src="~/Scripts/board.js"></script>
}